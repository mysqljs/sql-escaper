{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "include": ["**/**"],
    "ignore": [
      "node_modules",
      "lib",
      "benchmark",
      "coverage-reports",
      "playground",
      "t.ts",
      "mcr.config.ts"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "complexity": {
        "all": true,
        "noExcessiveCognitiveComplexity": "off"
      },
      "a11y": {
        "all": true
      },
      "correctness": {
        "all": true,
        "useImportExtensions": "error",
        "noNodejsModules": "off"
      },
      "nursery": {
        "all": true,
        "useImportRestrictions": "off",
        "noSecrets": "off",
        "useExplicitType": "off",
        "noOctalEscape": "off",
        "useGuardForIn": "off",
        "noNestedTernary": "off"
      },
      "performance": {
        "all": true,
        "noAccumulatingSpread": "error",
        "noBarrelFile": "error",
        "noDelete": "error",
        "noReExportAll": "error",
        "useTopLevelRegex": "error"
      },
      "security": {
        "all": true
      },
      "suspicious": {
        "all": true,
        "noControlCharactersInRegex": "off",
        "noShadowRestrictedNames": "off"
      },
      "style": {
        "all": true,
        "noDefaultExport": "error",
        "useNamingConvention": "off",
        "useBlockStatements": "off",
        "noNonNullAssertion": "off",
        "useTemplate": "off"
      }
    }
  },
  "overrides": [
    {
      "include": ["test"],
      "linter": {
        "rules": {
          "correctness": {
            "noNodejsModules": "off"
          },
          "performance": {
            "useTopLevelRegex": "off"
          },
          "suspicious": {
            "noEmptyBlockStatements": "off"
          }
        }
      }
    }
  ]
}
